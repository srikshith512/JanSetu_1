# Server
PORT=4000
NODE_ENV=development
# Comma-separated list of allowed origins for CORS (optional; if omitted, origin is reflected)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# PostgreSQL connection (preferred)
# Example: postgres://user:password@host:5432/dbname
DATABASE_URL=

# Or specify individually
PGHOST=localhost
PGUSER=postgres
PGPASSWORD=1234
PGDATABASE=jan_setu
PGPORT=5432

# SSL (for managed Postgres like Render/Heroku/Neon)
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false

# Uploads
UPLOAD_DIR=uploads
